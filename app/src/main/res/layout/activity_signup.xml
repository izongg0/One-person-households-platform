<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.signup.SignupActivity">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="16dp"
            android:layout_height="24dp"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/btn_login_leftarrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="147dp"
            android:layout_height="27dp"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="109dp"
            android:text="회원가입"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal|top"
            android:textSize="19sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="408dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_signup_dividebox_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title3" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_line"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="17dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/tv_idtext"
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="아이디"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    android:hint="아이디"
                    android:background="@drawable/bg_login_button_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_idtext" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="251dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_signup_button_yellow_radius"
                    android:text="중복 확인"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#FFB629"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_idtext" />

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="비밀번호"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_id" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="322dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    android:hint="비밀번호"
                    android:background="@drawable/bg_login_button_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_password" />

                <TextView
                    android:id="@+id/tv_passwordagain"
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="비밀번호 확인"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_password" />

                <EditText
                    android:id="@+id/et_passwordagain"
                    android:layout_width="322dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    android:hint="비밀번호 확인"
                    android:background="@drawable/bg_login_button_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_passwordagain" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="이름"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_passwordagain" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="322dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    android:hint="이름"
                    android:background="@drawable/bg_login_button_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="이메일"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_name" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="322dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    android:hint="이메일"
                    android:background="@drawable/bg_login_button_white"
                    android:inputType="textEmailAddress"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_email" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="닉네임"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_email" />

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="322dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="19dp"
                    android:hint="닉네임"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/bg_login_button_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_nickname" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/btn_signup_checkbox"
                    android:buttonTint="#212124"
                    android:checked="false"
                    android:fontFamily="sans-serif"
                    android:text="모두 동의(선택정보 포함)"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_nickname"
                    tools:ignore="DuplicateClickableBoundsCheck" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_signup_checkbox"
                    android:buttonTint="#212124"
                    android:checked="false"
                    android:text="모두 동의(선택정보 포함)"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="34dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_nickname" />

                <ImageView
                    android:id="@+id/iv_line1"
                    android:layout_width="408dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_signup_dividebox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/checkBox1" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_signup_checkbox"
                    android:buttonTint="#212124"
                    android:checked="false"
                    android:text="[필수]만 14세 이상"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_line1" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_signup_checkbox"
                    android:buttonTint="#212124"
                    android:checked="false"
                    android:text="[필수]이용약관 동의"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="10sp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_signup_checkbox"
                    android:buttonTint="#212124"
                    android:checked="false"
                    android:text="[필수]개인정보 수집 및 이용동의"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="10sp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_signup_checkbox"
                    android:buttonTint="#212124"
                    android:checked="false"
                    android:text="[필수]개인정보 처리방침 동의"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="10sp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox4" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_signup_checkbox"
                    android:buttonTint="#212124"
                    android:checked="false"
                    android:text="[선택]광고성 정보수신 및 마케팅 활용 동의"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="10sp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

                <TextView
                    android:id="@+id/btn_signup"
                    android:layout_width="322dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_login_button_yellow"
                    android:gravity="center_horizontal|top"
                    android:text="가입하기"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>